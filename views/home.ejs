<head>
  <style>
    .card {
      background-color: midnightblue;
      color: white;
    }
  </style>
</head>

<body>
  <!-- Your HTML code here -->
  <div class="mb-5 p-5">
    <% for( let project of all_projects ) { %>
    <div class="card mb-2 w-50 m-auto">
      <div class="card-header">
        <strong> Name of the project : </strong>
        <%= project.name %>
      </div>
      <div class="card-body">
        <h6 class="card-text">
          <strong> Author : </strong>
          <%= project.author %>
        </h6>
        <p class="card-text">
          <strong> Description : </strong>
          <%= project.description %>
        </p>

        <div class="m-auto text-end">
          <a
            href="/project/page/<%=project._id%>"
            class="btn btn-primary m-auto"
            >Open project</a
          >
        </div>
      </div>
    </div>
    <% } %>
  </div>
</body>
